<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_offer_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/gl_offer_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.5dp"
        android:background="@drawable/border"
        android:columnCount="2"
        android:rowCount="2">

        <TextView
            android:id="@+id/tvOfferDetailsOfferTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_row="0"
            android:background="@color/white"
            android:text="Cortacésped"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/imgbtnOfferDetailsFavorite"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:adjustViewBounds="true"
            android:background="@drawable/border"
            android:contentDescription="Hacer favorito"
            android:padding="6.5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/star" />

        <TextView
            android:id="@+id/tvOfferDetailsOfferUsedState"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="3dp"
            android:layout_row="1"
            android:background="@color/white"
            android:text="estado"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvOfferDetailsOfferTitle"
            tools:layout_editor_absoluteX="26dp" />
    </GridLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_offer_details_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1.5dp"
        android:background="@drawable/border">

        <Button
            android:id="@+id/btn_offer_details_photos_prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="<" />

        <ImageSwitcher
            android:id="@+id/imgsw_offer_details_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/btn_offer_details_photos_prev"></ImageSwitcher>

        <Button
            android:id="@+id/btn_offer_details_photos_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imgsw_offer_details_photos" />
    </android.support.constraint.ConstraintLayout>

    <GridLayout
        android:id="@+id/gl_offer_details_description_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1.5dp"
        android:background="@drawable/border"
        android:columnCount="2"
        android:rowCount="2">

        <TextView
            android:id="@+id/tv_offer_details_description"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:text="La descripción de la oferta es abc def ghijk. Abc def ghij klmn opqr. Def ghijkl mno pqrst uvw." />

        <TextView
            android:id="@+id/tv_offer_details_location"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Ciudad\n(x,yz km)" />

        <ImageButton
            android:id="@+id/imgbtn_offer_details_map"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/border"
            android:contentDescription="mostrar mapa"
            android:src="@mipmap/map_marker" />
    </GridLayout>

    <TableLayout
        android:id="@+id/tl_offer_details_time_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1.5dp"
        android:background="@drawable/border"
        android:columnCount="2"
        android:gravity="center"
        android:rowCount="2">

        <TableRow>

            <TextView
                android:layout_gravity="center"
                android:text="Quedan:" />

            <TextView
                android:id="@+id/tv_offer_details_offer_count"
                android:layout_gravity="center"
                android:text="(x ofertas)" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_offer_details_remaining_time"
                android:layout_gravity="center"
                android:text="Xd YYh ZZm" />

            <TextView
                android:id="@+id/tv_offer_details_current_price"
                android:layout_gravity="center"
                android:text="xxx €" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tl_offer_details_bid"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1.5dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:columnCount="2"
        android:focusable="true"
        android:padding="6.5dp"
        android:rowCount="1"
        android:stretchColumns="1">

        <TableRow>

            <ImageView
                android:contentDescription="proponer un precio"
                android:src="@mipmap/gavel" />

            <TextView
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:autoSizeTextType="uniform"
                android:singleLine="false"
                android:text="Propon un precio!" />

        </TableRow>
    </TableLayout>
</LinearLayout>