<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llOfferDetailsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clOfferDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvOfferDetailsOfferTitle"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="CortacÃ©sped"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tvOfferDetailsOfferUsedState"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="estado"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvOfferDetailsOfferTitle"
            tools:layout_editor_absoluteX="26dp" />

        <ImageButton
            android:id="@+id/imgbtnOfferDetailsFavorite"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginStart="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/border"
            android:padding="6.5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/star"
            app:layout_constraintStart_toEndOf="@+id/tvOfferDetailsOfferTitle"
            tools:layout_editor_absoluteY="0dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clOfferDetailsPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clOfferDetailsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clOfferDetailsTimePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/imgbtnBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/gavel" />
</LinearLayout>