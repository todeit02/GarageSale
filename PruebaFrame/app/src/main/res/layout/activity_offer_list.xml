<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llOfferListTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtnFilter"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:background="@drawable/border"
                android:padding="6.5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/search" />

            <TextView
                android:id="@+id/tvActivityName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:text="Ofertas"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/imgbtnPersonalArea"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:background="@drawable/border"
                android:padding="6.5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/mail_user" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrvOfferListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/myAqua"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:id="@+id/offerListContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/offer_divider"
                android:gravity="center"
                android:orientation="vertical"
                android:showDividers="middle"></LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnOfferListAdd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="5dp"
        android:background="@mipmap/circle_plus"
        android:text="+" />


</RelativeLayout>