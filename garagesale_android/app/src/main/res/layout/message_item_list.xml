<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_offer_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/border_rounded_background_content"
        android:orientation="vertical"
        android:padding="2dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1.5dp"
            android:layout_weight="0"
            android:background="@drawable/border_rounded_background_title"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgv_btn_title"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/school_bell"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:paddingRight="40dp"
                    android:text="Compra"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imgv_btn_title"
                    app:layout_constraintLeft_toRightOf="@+id/imgv_btn_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imgv_btn_title" />

                <ImageView
                    android:id="@+id/imgv_btn_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:fontFamily="sans-serif-smallcaps"
            android:text="title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Vendedor"
            android:textColor="@color/oil"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Telefono"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Como deseas abonar?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0" >

            <RadioButton
                android:id="@+id/radioButtonCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Tarjeta de debido/credito"
                android:textColor="@color/monsoon" />

            <RadioButton
                android:id="@+id/radioButtonCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Efectivo"
                android:textColor="@color/monsoon" />
        </TableRow>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_btn_bid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1.5dp"
            android:layout_weight="0"
            android:background="@drawable/border_rounded_background"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgv_btn_title_offer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/customer_service"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_btn_bid_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Contactar vendedor"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgv_btn_title_offer"
                app:layout_constraintLeft_toRightOf="@+id/imgv_btn_title_offer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgv_btn_title_offer" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Ya te has comunicado con el vendedor?"
            android:textAlignment="center"
            android:textColor="@color/oil"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switchErase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="0"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Si, no deseo volver a ver este mensaje"
            android:textColor="@color/base" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>