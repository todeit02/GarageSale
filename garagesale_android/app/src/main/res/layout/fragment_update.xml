<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariaventura.pruebaframe.Fragment.UpdateFragment">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.mariaventura.pruebaframe.Fragment.UpdateFragment">

        <!-- Titulo-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_input"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Nombre"
            android:minLines="1"
            android:maxLines="1"
            android:maxLength="55"
            android:phoneNumber="false"
            android:singleLine="true"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <!-- Descripción -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descripcion_input"
            android:layout_below="@+id/name_input"
            android:layout_centerHorizontal="true"
            android:hint="Descripción"
            android:maxLength="128"
            android:nestedScrollingEnabled="true"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <!-- Precio -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/precio_input"
            android:layout_below="@+id/name_input"
            android:layout_centerHorizontal="true"
            android:hint="Precio"
            android:maxLength="128"
            android:nestedScrollingEnabled="true"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />


        <!-- Etiqueta Fecha-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fecha"
            android:id="@+id/fechaDePublicacion_text"
            android:layout_below="@+id/precio_input"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="16dp"
            android:textColor="@android:color/black" />

        <!-- Fecha  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2015/05/17"
            android:id="@+id/fechaEjemplo_text"
            android:layout_below="@+id/precio" />

        <!-- Filtro -->
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filtro_spinner"
            android:entries="@array/entradas_filtro"
            android:layout_below="@+id/filtro_texto" />

        <!-- Etiqueta Filtro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Filtro"
            android:id="@+id/filtro_texto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fechaEjemplo_text"
            android:paddingTop="16dp"
            android:textColor="@android:color/black" />

        <!-- Vendedor -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vendedor_input"
            android:layout_below="@+id/filtro_texto"
            android:layout_centerHorizontal="true"
            android:hint="Vendedor"
            android:maxLength="128"
            android:nestedScrollingEnabled="true"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />


    </RelativeLayout>

</FrameLayout>
